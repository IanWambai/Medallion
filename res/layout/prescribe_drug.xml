<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="25"
            android:text="Patient ID"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/et_patient_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="25" >
        </EditText>

          <DatePicker
            android:id="@+id/dp_prescription_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
          
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="25"
            android:text="Drug"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
 <AutoCompleteTextView android:id="@+id/et"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
        </AutoCompleteTextView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="25"
            android:text="Drug Quantity"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/et_prescribe_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="25" >
        </EditText>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="25"
            android:text="Total Cost"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tv_prescribe_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="25"
            android:text="TextView" />

        <Button
            android:id="@+id/b_add_new_prescription"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/list_selector"
            android:ems="25"
            android:text="Add another prescription"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/b_finish_add_prescription"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/list_selector"
            android:ems="25"
            android:text="Finish"
            android:textColor="#ffffff" />
    </LinearLayout>

</ScrollView>