<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/et_supplier_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="25" >
        </EditText>

        <CheckBox
            android:id="@+id/cb_delivers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivers the items" 
            android:ems="25"/>

      <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes"
            android:ems="25"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/et_supplier_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="25" >
        </EditText>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:ems="25"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/et_supplier_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="25" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:ems="25"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/et_supplier_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="25" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:ems="25" />

        <EditText
            android:id="@+id/et_supplier_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="25" />

        <Button
            android:id="@+id/b_add_new_supplier"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/list_selector"
            android:text="Add another supplier"
            android:textColor="#ffffff" 
            android:ems="25"/>

        <Button
            android:id="@+id/b_finish_add_suppplier"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/list_selector"
            android:text="Finish"
            android:textColor="#ffffff" 
            android:ems="25"/>
    </LinearLayout>

</ScrollView>